---
import Layout from "@layouts/Layout.astro";
const { title, pubDate, minutesRead, collection } = Astro.props.frontmatter;

// Format date to simple YYYY/M/D format
const formatDate = (date: Date) => {
  const year = date.getFullYear();
  const month = date.getMonth() + 1;
  const day = date.getDate();
  return `${year}/${month}/${day}`;
};
---

<Layout title={title}>
  <main>
    <article>
      <section class="pb-5 pt-5">
        <p class="text-3xl font-bold">
          {title}
        </p>
        <p class="text-sm text-dark-1 dark:text-gray-4">
          {formatDate(pubDate)} Â· {minutesRead}
        </p>
      </section>
      <div class="prose">
        <slot />
      </div>
    </article>
  </main>
</Layout>
